{% load template_utils %}
<?xml version="1.0" encoding="utf-8"?>
<rdf:RDF xmlns:rdf="http://www.w3.org/1999/02/22-rdf-syntax-ns#" xmlns:sp="http://smartplatforms.org/terms#" xmlns:dcterms="http://purl.org/dc/terms/">
  {% for med in meds %}
  <sp:Medication>
    <sp:drugName>
      <sp:CodedValue>
        <sp:code>
	  <sp:Code rdf:about="{{med.name_type}}{{med.name_value}}">
	    <sp:system rdf:resource="{{med.name_type}}" />
	    <dcterms:identifier>{{med.name_value}}</dcterms:identifier>
	  </sp:Code>
	</sp:code>
        <dcterms:title>{{med.name}}</dcterms:title>
      </sp:CodedValue>
    </sp:drugName>
    <sp:startDate>{{med.date_started}}</sp:startDate>
    <sp:endDate>{{med.date_stopped}}</sp:endDate>
    <sp:instructions>{{med.prescription_instructions|check_empty}}</sp:instructions>
    <sp:quantity>
      <sp:ValueAndUnit>
        <sp:value>{{med.dose_value}}</sp:value>
        <sp:unit>{{med.does_unit}}</sp:unit>
      </sp:ValueAndUnit>
    </sp:quantity>
    <!-- can't do frequency yet -->
    <sp:frequency>
      <sp:ValueAndUnit>
        <sp:value></sp:value>
        <sp:unit></sp:unit>
      </sp:ValueAndUnit>
    </sp:frequency>
  </sp:Medication>
{% endfor %}
</rdf:RDF>
